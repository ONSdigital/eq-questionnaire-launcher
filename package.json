{
  "name": "eq-questionnaire-launcher",
  "version": "2.0.0",
  "description": "ONS Digital eQ Questionnaire Launcher Dev Tool",
  "author": {
    "name": "ONS Digital",
    "url": "http://onsdigital.github.io/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ONSdigital/eq-questionnaire-launcher"
  },
  "scripts": {
    "lint": "npm run lint-go && npm run lint-static && npm run lint-templates",
    "lint-go": "golangci-lint run",
    "lint-static": "prettier --check \"static/**/*.{js,css}\" && eslint \"static/javascript/*.js\"",
    "lint-templates": "djlint templates --lint",
    "format": "npm run format-go && npm run format-static && npm run format-templates",
    "format-go":"go fmt ./...",
    "format-static": "prettier \"static/**/*.{js,css}\" --write",
    "format-templates": "djlint templates/*.html --reformat"

  },
  "devDependencies": {
    "djlint": "^1.34.1",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "prettier": {},
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "off",
      "no-undef": "off"
    }
  }
}
